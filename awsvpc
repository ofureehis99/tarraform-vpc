
provider "aws" {
  version = "~> 3.0"
  region  = "us-east-1"
}

resource "aws_vpc" "schoolclass" {
  cidr_block       = "10.0.0.0/16"
  instance_tenancy = "default"

  tags = {
    Name = "schoolclass_vpc"
  }
}

resource "aws_subnet" "schoolclasspublicone" {
  vpc_id     = aws_vpc.schoolclass.id
  cidr_block = "10.0.1.0/24"

  tags = {
    Name = "class_publicone"
  }
}

resource "aws_subnet" "schoolclassprivate" {
  vpc_id     = aws_vpc.schoolclass.id
  cidr_block = "10.0.2.0/24"

  tags = {
    Name = "class_private"
  }
}

resource "aws_subnet" "schoolclasspublictwo" {
  vpc_id     = aws_vpc.schoolclass.id
  cidr_block = "10.0.3.0/24"

  tags = {
    Name = "class_publictwo"
  }
}

resource "aws_internet_gateway" "schoolclassinternetgateway" {
  vpc_id = aws_vpc.schoolclass.id

  tags = {
    Name = "schoolclassinternet_gateway"
  }
}


resource "aws_route_table" "schoolclassroutetableone" {
  vpc_id = aws_vpc.schoolclass.id

  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.schoolclassinternetgateway.id
  }

  tags = {
    Name = "schoolclass_routetableone"
  }
}



resource "aws_route_table" "schoolclassroutetabletwo" {
  vpc_id = aws_vpc.schoolclass.id

  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.schoolclassinternetgateway.id
  }

  tags = {
    Name = "schoolclass_routetabletwo"
  }
}



resource "aws_route_table_association" "association1" {
  subnet_id      = aws_subnet.schoolclasspublicone.id
  route_table_id = aws_route_table.schoolclassroutetableone.id

resource "aws_route_table_association" "association2" {
  subnet_id      = aws_subnet.schoolclasspublictwo.id
  route_table_id = aws_route_table.schoolclassroutetableone.id
}

resource "aws_route_table_association" "association3" {
  subnet_id      = aws_subnet.schoolclassprivate.id
  route_table_id = aws_route_table.schoolclassroutetableone.id
}
